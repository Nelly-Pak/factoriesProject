<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sample.entities.FactoryEntity" table="factory" schema="factories" catalog="factories">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="exportId">
            <column name="export_id" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>